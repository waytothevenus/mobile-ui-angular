{
  "preset": "google",
  "esnext": true,
  "maximumLineLength": {
    "value": 160,
    "allExcept": ["comments", "regex"]
  },
  "excludeFiles": [
    "node_modules/**",
    "bower_components/**",
    "docs/**",
    "out/**",
    "dist/**"
  ],
  "jsDoc": {
    "checkAnnotations": {
      "preset": "jsdoc3",
      "extra": {
        "module": true,
        "position": true,
        "directive": true,
        "restrict": true,
        "scope": true,
        "as": true,
        "service": true,
        "ngdoc": true,
        "shortname": true,
        "memberOf": true
      }
    }
  }
}
